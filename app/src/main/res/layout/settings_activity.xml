<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
            android:background="@color/mycolor">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <Switch
                    android:paddingTop="50dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textSize="20dp"
                    android:paddingBottom="20dp"
                    android:id="@+id/s"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enable Panic Mode"
                    android:textColor="#A20000"

                   />


<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:padding="20dp"
        android:textColor="#9B0000"
        android:text="Select the panic mode activity">

</TextView>
            <RadioGroup
                    android:id="@+id/r1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="40dp"


                    >
            <RadioButton
                    android:paddingLeft="20dp"
                    android:id="@+id/whatsapp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Whatsapp"
                    android:textColor="#000"

                    android:textSize="15dp" />

            <RadioButton android:id="@+id/mail"
                       android:paddingLeft="20dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Mail"
                    android:textColor="#000"
                    android:textSize="15dp"/>


</RadioGroup>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:padding="20dp"
                    android:textColor="#9B0000"
                    android:text="Most Trusted Contact"/>
            <RadioGroup
                    android:id="@+id/r2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="40dp"
                    >
                <RadioButton
                        android:paddingLeft="20dp"
                        android:id="@+id/p1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Person 1"
                        android:textColor="#000"

                        android:textSize="15dp" />

                <RadioButton android:id="@+id/p2"
                        android:paddingLeft="20dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Person 2"
                        android:textColor="#000"
                        android:textSize="15dp"/>


            </RadioGroup>


        </LinearLayout>
        <ImageButton
                android:id="@+id/btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:paddingBottom="10dp"
                android:onClick="savefun"

                android:src="@drawable/save"/>
    </FrameLayout>




</LinearLayout>